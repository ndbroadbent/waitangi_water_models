# Waitangi Water Models Configuration
# Copy this file to .env and fill in your API keys

# Data Sources
# LINZ API key - get free at https://data.linz.govt.nz/
DATA_SOURCES__LINZ_API_KEY=your_linz_api_key_here
DATA_SOURCES__LINZ_BASE_URL=https://data.linz.govt.nz
# MetService/MetOcean API key - get at https://console.metoceanapi.com/
DATA_SOURCES__METSERVICE_API_KEY=your_metservice_api_key_here
DATA_SOURCES__METSERVICE_BASE_URL=https://forecast-v2.metoceanapi.com
# Other data sources (no keys required)
DATA_SOURCES__NRC_BASE_URL=https://envdata.nrc.govt.nz
DATA_SOURCES__NIWA_BASE_URL=https://tides.niwa.co.nz
DATA_SOURCES__CACHE_DIR=~/.cache/waitangi
DATA_SOURCES__GAUGE_UPDATE_INTERVAL=15
DATA_SOURCES__WEATHER_UPDATE_INTERVAL=60

# GPU Backend: cpu, cuda, or metal
GPU_BACKEND=cpu

# Tide Settings
TIDE__MEAN_SEA_LEVEL=1.5
TIDE__SPRING_AMPLITUDE=1.4
TIDE__NEAP_AMPLITUDE=0.8
TIDE__PHASE_LAG_MINUTES=15.0

# River Settings
RIVER__Q_BASE=2.0
RIVER__RUNOFF_COEFFICIENT=0.3
RIVER__TAU_HOURS=6.0
RIVER__DELAY_HOURS=2.0
RIVER__CATCHMENT_AREA_KM2=85.0
RIVER__DECAY_LENGTH_M=3000.0
RIVER__CROSS_SECTION_M2=25.0

# Wind Settings
WIND__DRAG_COEFFICIENT=0.02
WIND__REFERENCE_HEIGHT=10.0
WIND__KAYAK_FRONTAL_AREA=0.4

# Kayak Settings
KAYAK__MAX_PADDLE_SPEED=1.67
KAYAK__CRUISE_PADDLE_SPEED=1.11
KAYAK__SPRINT_PADDLE_SPEED=2.22
KAYAK__WATER_DRAG=0.01

# Simulation Settings
SIM__DT=1.0
SIM__MAX_DURATION_HOURS=12.0
SIM__OUTPUT_INTERVAL=60.0
SIM__USE_RK2=true
SIM__PARTICLE_BATCH_SIZE=10000

# Debug Mode
DEBUG=false
